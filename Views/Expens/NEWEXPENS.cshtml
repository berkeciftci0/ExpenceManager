@model ExpenceManager.Models.Entity.TBLMASRAFLAR
@{
    ViewBag.Title = "NEWEXPENS";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1>Add Expens</h1>

<form method="post" class="form-group">
    <div>
        <label>Employee Name</label>
        <input type="text" class="form-control" name="CALISANAD" required="" placeholder="Employee Name"/>       
    </div>
    <div>
        <label>Category</label>
        @Html.DropDownListFor(m => m.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label>Price</label>
        <input type="text" class="form-control" name="FIYAT" required="" placeholder="Price"/>
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Add Expens</button>
    </div>
</form>

